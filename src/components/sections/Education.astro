---
import { education } from "@cv";
---

<section>
  <h2 class="font-bold text-xl">Educaci√≥n</h2>
  <hr class="border-gray-300" />
  <ul>
    {
      education.map(
        ({ studyType, area, institution, startDate, endDate, url }) => (
          <li class="mb-2">
            <article>
              <header>
                <a href={url} target="_blank">
                  <h3 class="text-l font-bold">
                    {studyType}: {area}
